<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="bodybg" stylesheets="@stylesPrimary.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifsp.jscopa.SecondaryController">
    <children>
        <VBox fx:id="vbox" prefHeight="788.0">
            <HBox fx:id="bot" alignment="CENTER" spacing="5">
            <effect>
               <DropShadow />
            </effect></HBox>

            <HBox fx:id="mesa" alignment="CENTER" spacing="5">
            <effect>
               <DropShadow />
            </effect></HBox>

            <HBox fx:id="deck" alignment="CENTER" spacing="5">
            <effect>
               <DropShadow />
            </effect></HBox>

            <Label fx:id="pointsLabel" textFill="WHITE">
            <font>
               <Font name="Arial Black" size="18.0" />
            </font>
            <effect>
               <DropShadow />
            </effect></Label>

            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
    <cursor>
        <Cursor fx:constant="DEFAULT" />
    </cursor>
</VBox>
